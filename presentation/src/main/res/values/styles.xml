<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:itemBackground">@color/itemBackground</item>
        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:backgroundTint">@color/edittext_bg_tint</item>
        <item name="android:paddingEnd">@dimen/gap_16</item>
        <item name="android:paddingStart">@dimen/gap_16</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <dimen name="edittext_drawable">20dp</dimen>

    <style name="DefaultEditText.Tint">
        <item name="android:minHeight">@dimen/action_bar_height</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>


    <style name="action_button">
        <item name="android:layout_width">@dimen/action_button_size</item>
        <item name="android:layout_height">@dimen/action_button_size</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="menu_button">
        <item name="android:layout_width">@dimen/action_button_size</item>
        <item name="android:layout_height">@dimen/action_button_size</item>
        <item name="android:padding">4dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="menu_button.small">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="action_textbutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/action_button_size</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="keyboardPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/min_panel_height</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="toolbar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:id">@id/toolbar</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:id">@id/toolbarTitle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbarTitle.Linear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
